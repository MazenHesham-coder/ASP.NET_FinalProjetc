@page
@model AspPageWebApplication.Pages.Universities.StudentsModel
@{
}
<h2 style="text-align:center">
    University's Students list
</h2>

<table class="table" style="background-color: #C0C0C0">
    <tr>
        <td class="font-weight-bold">Name</td>
        <td class="font-weight-bold">Age</td>
        <td class="font-weight-bold">Grade</td>
        <td class="font-weight-bold">Email</td>
    </tr>

    @foreach (var stud in Model.Students)
    {
        <tr>
            <td>@stud.Name</td>
            <td>@stud.Age</td>
            <td>@stud.Grade</td>
            <td>@stud.Email</td>

            <td>
                <a asp-page="./EditStudent" asp-route-studentId=" @stud.Id">Edit</a>
            </td>

            <td>
                <a asp-page="./DeleteStudent" asp-route-studentId=" @stud.Id">Delete</a>
            </td>
        </tr>

    }


</table>


<a asp-page="./EditStudent" class="btn btn-dark">Add Student</a>

